@page

<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="example-tab" data-toggle="tab" href="#example" role="tab">Example</a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" id="create-wallet-tab" data-toggle="tab" href="#create-wallet" role="tab">Create Wallet</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="exisiting-wallet-tab" data-toggle="tab" href="#exisiting-wallet" role="tab">Open Existing Wallet</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="account-balance-tab" data-toggle="tab" href="#account-balance" role="tab">Account Balance</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="send-transaction-tab" data-toggle="tab" href="#send-transaction" role="tab">Send Transaction</a>
    </li>
</ul>
<div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="example" role="tabpanel" aria-labelledby="example-tab">
                <form name="form1">
                    <h4>(Step1) choose supported EC curve name and generate key pair</h4>
                    ECC curve name: <b>secp256k1</b>

                    <input type="button" value="generate EC key pair" onClick="doGenerate();" /><br />
                    <p>
                        EC private key (hex): <input type="text" name="prvkey1" value="" size="100" /><br />
                        EC public key (hex): <input type="text" name="pubkey1" value="" size="100" /><br />
                    </p>

                    <!-- ============================================================== -->

                    <h4>(Step2) Sign message</h4>
                    Signature Algorithm: SHA256withECDSA
                    <br />

                    Message string to be signed:
                    <input type="text" name="msg1" value="aaa" size="100" /><br />
                    <input type="button" value="sign message" onClick="doSign();" /><br />
                    <p>
                        Signature value (hex): <input type="text" name="sigval1" value="" size="100" /><br />
                    </p>

                    <h4>(Step3) Verify signature</h4>
                    <input type="button" value="verify it!" onClick="doVerify();" />
                    <input type="reset" value="reset" />

                </form>
        </div>
        <div class="tab-pane fade show active" id="create-wallet" role="tabpanel" aria-labelledby="create-wallet-tab">
            <h2>Create new wallet</h2>
            <p>Generate a new wallet: random private key -> public key -> address.</p>
            <div class="mb-3">
                <button type="button" class="btn btn-primary">Generate now</button>
            </div>
            <textarea style="width:600px"></textarea>
        </div>
        <div class="tab-pane fade" id="exisiting-wallet" role="tabpanel" aria-labelledby="exisiting-wallet-tab">
            <h2>Open an existing wallet</h2>
            <p>Enter your private key (compressed ECDSA key, 65 hex digits).</p>

            <div class="input-group input-group-sm mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-sm">Key</span>
                </div>
                <input type="text" class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm">
            </div>
            <div class="mb-3">
                <button type="button" class="btn btn-primary">Open wallet</button>
            </div>
            <textarea style="width:600px"></textarea>
        </div>
        <div class="tab-pane fade" id="account-balance" role="tabpanel" aria-labelledby="account-balance-tab">
            <h2>View account balance</h2>

            <div class="input-group input-group-sm mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-sm">Address</span>
                </div>
                <input type="text" disabled class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm">
            </div>
            <div class="input-group input-group-sm mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-sm">Blockchain Node</span>
                </div>
                <input type="text" class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm">
            </div>
            <div class="mb-3">
                <button type="button" class="btn btn-primary">Display Balance</button>
            </div>
            <textarea style="width:600px"></textarea>
        </div>
        <div class="tab-pane fade" id="send-transaction" role="tabpanel" aria-labelledby="send-transaction-tab">
            <h2>Send transaction</h2>
            <div class="input-group input-group-sm mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-sm">Sender</span>
                </div>
                <input type="text" disabled class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm">
            </div>
            <div class="input-group input-group-sm mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-sm">Recipient</span>
                </div>
                <input type="text" class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm">
            </div>
            <div class="input-group input-group-sm mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-sm">Value</span>
                </div>
                <input type="text" class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm">
            </div>
            <div class="mb-3">
                <button type="button" class="btn btn-primary">Sign transaction</button>
            </div>
            <textarea style="width:600px"></textarea>
            <div class="input-group input-group-sm mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-sm">Blockchain Node</span>
                </div>
                <input type="text" class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm">
            </div>
            <div class="mb-3">
                <button type="button" class="btn btn-primary">Send Transaction</button>
            </div>
            <textarea style="width:600px"></textarea>
        </div>
    </div>

